      - type: ArmPose
        args:
          side: 'left'
          goal:
            type: 'ee'
            pose:
              position: [0.575, -0.031, 0.858]
              orientation: [-0.432, -0.163, -0.684, 0.564]
            frame: "base_link"
            tolerance: 0.01
